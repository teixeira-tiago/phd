#<ScreenManagement>:
#    PaginaInicial:
#    SegundaPagina:
<SpinnerOption>:
    size_hint: None, None
    height: 30

<PaginaInicial>:
    name: 'paginaInicial'
    GridLayout:
        cols: 2
        row_force_default: True
        row_default_height: 40
        Label:
            text: 'Setup Matrix [b]H[/b]'
            text_size: cm(4), cm(1)
            markup: True
            halign: 'center'
        Label:
            text: 'Other\'s Setup'
            text_size: cm(4), cm(1)
            markup: True
            halign: 'center'
        GridLayout:
            cols: 2
            row_force_default: True
            row_default_height: 30
            Label:
                text: 'h0'
                width: 50
            TextInput:
                input_type: 'number'
                input_filter: 'float'
                text: '0.00002304'
                id: txtH0
            Label:
                text: 'h1'
                width: 50
            TextInput:
                input_type: 'number'
                input_filter: 'float'
                text: '0.0172264'
                id: txtH1
            Label:
                text: 'h2'
                width: 50
            TextInput:
                input_type: 'number'
                input_filter: 'float'
                text: '0.452445'
                id: txtH2
            Label:
                text: 'h3'
                width: 50
            TextInput:
                input_type: 'number'
                input_filter: 'float'
                text: '1.0'
                id: txtH3
            Label:
                text: 'h4'
                width: 50
            TextInput:
                input_type: 'number'
                input_filter: 'float'
                text: '0.563307'
                id: txtH4
            Label:
                text: 'h5'
                width: 50
            TextInput:
                input_type: 'number'
                input_filter: 'float'
                text: '0.149335'
                id: txtH5
            Label:
                text: 'h6'
                width: 50
            TextInput:
                input_type: 'number'
                input_filter: 'float'
                text: '0.0423598'
                id: txtH6
        GridLayout:
            cols: 2
            row_force_default: True
            row_default_height: 30
            halign: 'left'
            Label:
                text: 'Pattern'
            TextInput:
                text: '8b4e'
                id: txtPattern
            Label:
                text: 'Algorithm'
            Spinner:
                text: 'GDP'
                values: ('GD', 'GDP', 'SSF', 'PCD', 'TAS', 'OMP')
                on_text: self.text
                id: spnAlgo
            Label:
                text: 'Iterations'
            TextInput:
                input_type: 'number'
                input_filter: 'int'
                text: '100'
                id: txtIterations
            Label:
                text: 'Quantization'
            TextInput:
                input_type: 'number'
                input_filter: 'int'
                text: '16'
                id: txtQuantization
            Label:
                text: 'Gain'
            TextInput:
                input_type: 'number'
                input_filter: 'int'
                text: '6'
                id: txtGain
            Label:
                text: 'Lambda'
            TextInput:
                input_type: 'number'
                input_filter: 'float'
                text: '0.1'
                id: txtLambda
            Widget:
                Button:
                    pos: self.parent.pos
                    height: self.parent.height
                    width: self.parent.width * 2
                    on_release: app.root.start()
                    text: 'Verilog Generate'


